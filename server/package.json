  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon -r dotenv/config --exec 'node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm' index.ts",
    "copy-protos": "bash-scripts/copy-protos.sh",
    "build": "tsc --build && npm run copy-protos",
    "production": "npm run build && node bin/www",
    "clean": "tsc --build --clean",
    "docker:up": "docker-compose -p pear-connect --env-file .env up -d",
    "docker:down": "docker-compose -p pear-connect  --env-file .env down",
    "db:cli": "mongo admin -u admin -p password",
    "envoy": "envoy -c config/envoy.config.yaml",
    "envoy:docker": "envoy -c config/envoy.docker.yaml",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "cp:contract-types": "rm -rf ./pears/crypto/typechain-types && cp -r ../../fare-smart-contracts/crypto/typechain-types ./pears/crypto/typechain-types"
